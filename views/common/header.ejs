<div class="fly-header layui-bg-black">
    <div class="layui-container">
        <a class="fly-logo" style="line-height:40px;font-size:16px;color:rgba(255,255,255,.7);" href="/">
            Node答疑系统
        </a>

        <ul class="layui-nav fly-nav-user">
            <% if(session && session.username){ %>
            <!-- 登入后的状态 -->
                <li class="layui-nav-item">
                    <a class="fly-nav-avatar" href="javascript:;">
                        <cite class="layui-hide-xs"><span id="hdUserName"><%= session.username %></span></cite>
                        <% if(session && session.role_type=='老师'){ %>
                        <i class="iconfont icon-renzheng layui-hide-xs" title="老师"></i>
                        <% } %>
                        <img id="headerAvatar" src="<%= session.pic %>">
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="/server/users/set"><i class="layui-icon">&#xe620;</i>基本设置</a></dd>
                        <dd><a href="user/message.html"><i class="iconfont icon-tongzhi" style="top: 4px;"></i>我的消息</a></dd>
                        <dd><a href="/server/users/home?uid=<%=session.uid %>"><i class="layui-icon" style="margin-left: 2px; font-size: 22px;">&#xe68e;</i>我的主页</a></dd>
                        <hr style="margin: 5px 0;">
                        <dd><a href="/server/users/logout" style="text-align: center;">退出</a></dd>
                    </dl>
                </li>

            <% } else { %>
                <!-- 未登入的状态 -->
                <li class="layui-nav-item">
                    <a class="iconfont icon-touxiang layui-hide-xs" href="/login"></a>
                </li>
                <li class="layui-nav-item">
                    <a href="/login">登入</a>
                </li>
                <li class="layui-nav-item">
                    <a href="/reg">注册</a>
                </li>
            <% } %>

        </ul>
    </div>
</div>
<script>
    //注意：导航 依赖 element 模块，否则无法进行功能性操作
    layui.use('element', function(){
        var element = layui.element;
        element.render();
        //…
    });
</script>